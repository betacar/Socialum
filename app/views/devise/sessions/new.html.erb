      <% titulo 'Login' %>
      <h1 class="hasIcono login">Ingrese con su credencial de red</h1>
      <%= content_tag(:div, flash[:error], :class => "error") if flash[:error] %>
      <%= content_tag(:div, flash[:notice], :class => "info") if flash[:notice] %>
      <%= content_tag(:div, flash[:alert], :class => "advertencia") if flash[:alert] %>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <ul>
          <li>
            <%= f.label :login, '<strong>Usuario:</strong>'.html_safe %>
            <%= f.text_field :login, :placeholder => 'nombre.apellido' %>
          </li>
          <li>
            <%= f.label :password, '<strong>Contraseña:</strong>'.html_safe %>
            <%= f.password_field :password, :placeholder => 'contraseña' %>
          </li>
          <li>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'Recordarme en este equipo *' %>
          </li>
          <li>
            <small>* Si utiliza un equipo compartido, <strong>no</strong> se recomienda activar esta opción.</small>
          </li>
          <li class="derecha">
            <%= f.submit 'Ingresar', :class => "blue" %>
          </li>
        </ul>
      <% end %>
      <div class="clearfix"></div>
      <%= render "links" %>
