<head>
  <meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <title><%= yield(:titulo) || controller.action_name %> | Socialum - CVG Bauxilum</title>
	<meta name="description" content="Aplicación transaccional y de gestión de eventos de los procesos de arribo, descarga, apilamiento, recuperación, alimentación, almacenamiento y despacho de materia prima y producto terminado de CVG Bauxilum" />
	<meta name="author" content="Carlos Betancourt Carrero" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="shortcut icon" href="/favicon.ico" />
	<link rel="icon" href="/favicon.ico" type="image/x-icon" />
	<link rel="apple-touch-icon" href="/apple-touch-icon.png">
  <%= stylesheet_link_tag "fw_grid", "style", :cache => true %>
  <%= javascript_include_tag "libs/modernizr-1.7.min.js", :cache => true %>
</head>
<body>
  <section id="top_bar">
    <div class="container_24">
    <% if usuario_signed_in? %>
      <p class="grid_12">
        <span class="alertas">Tiene <strong><a href="#alertas">0 alertas</a></strong> sin leer</span>  |  <span class="configuracion"><%= link_to 'Configuración', :controller => 'configuracion' %></span>
      </p>
    <% end %>
    <% if usuario_signed_in? %>
      <p class="grid_12 derecha">
        <span class="persona" id="ficha" data-ficha="<%= current_usuario.ficha %>"><%= current_usuario.datos %></small></span>  |  <span class="ayuda"><a href="#help">Ayuda</a></span>  |  <span class="logout"><%= link_to('Salir', destroy_usuario_session_path) %></span>
      <% else %>
      <p class="grid_24 derecha">
        <span class="persona"><%= link_to('Login', new_usuario_session_path)  %></span>
      <% end %>
      </p>
      <div class="clearfix"></div>
    </div>
  </section>
  <header>
    <div class="container_24">
      <div class="grid_5 suffix_7 logo">
        <%= image_tag "sa_header_logo_socialum.png", :alt => "Socialum - Socialización de la información e integración de los procesos productivos del sector aluminio", :title => "Socialum - Socialización de la información e integración de los procesos productivos del sector aluminio" %>
      </div>
      <ul class="prefix_7 grid_5 derecha">
        <li><%= image_tag "sa_cvg_logo.jpg", :alt => "Corporación Venezolana de Guayana - ¡Corporación al Socialismo!", :title => "Corporación Venezolana de Guayana - ¡Corporación al Socialismo!" %></li>
        <li><%= image_tag "sa_bauxilum_logo.jpg", :alt => "CVG Bauxilum", :title => "CVG Bauxilum" %></li>
      </ul>
      <div class="clearfix"></div>
    </div>
  </header>
  <nav id="menu">
    <ul class="container_24">
      <li <%= activo('overview') %> title="Reporte overview"><span class="overview"><%= link_to 'Overview', :controller => 'overview' %></span></li>
      <li <%= activo('arribos') %> title="Arribos y descargas de materia"><span class="arribos"><%= link_to 'Arribos y descargas', :controller => 'arribos' %></span></li>
      <!--li title="Apilamiento de bauxita en patios"><span class="apilado">Apilamiento</span></li>
      <li title="Alimentación de bauxita a planta"><span class="alimentado">Alimentación</span></li>
      <li title="Almacenamiento de alúmina en silo"><span class="almacenado">Almacenamiento</span></li>
      <li title="Despacho de alúmina a clientes"><span class="despacho">Despacho</span></li-->
      <li title="Resportes de novedades y fallas"><span class="novedades">Novedades</span></li>
    </ul>
  </nav>
  <section id="main" role="main" class="container_24">
  <% if flash[:success]%>
    <div class="exito">
      <span> </span>
      <p><%= flash[:success]%></p>
    </div>
  <% end %>
  <% if flash[:warning]%>
    <div class="advertencia">
      <span> </span>
      <p><%= flash[:warning]%></p>
    </div>
  <% end %>
  <% if flash[:error]%>
    <div class="error">
      <span> </span>
      <p><%= flash[:error]%></p>
    </div>
  <% end %>
  <% if flash[:notice]%>
    <div class="info">
      <span> </span>
      <p><%= flash[:notice]%></p>
    </div>
  <% end %>
    <%= yield %>
  </section>    
  <%= javascript_include_tag 'libs/jquery.min', 'libs/jquery.tipsy', 'plugins', 'application', :cache => true %>
  <%= yield :jquery_scripts, :cache => false %>
  <!--[if lt IE 7 ]>
  <script src="javascripts/libs/dd_belatedpng.js"></script>
  <script> DD_belatedPNG.fix('img, .png_bg');</script>
  <![endif]-->
</body>
</html>
