<h1>Listing tolvas</h1>

<table>
  <tr>
    <th>Estado</th>
    <th>Desc tolva</th>
    <th>Usuario id created</th>
    <th>Usuario id update</th>
  </tr>

<% @tolvas.each do |tolva| %>
  <tr>
    <td><%=h tolva.estado %></td>
    <td><%=h tolva.desc_tolva %></td>
    <td><%=h tolva.usuario_id_created %></td>
    <td><%=h tolva.usuario_id_update %></td>
    <td><%= link_to 'Show', tolva %></td>
    <td><%= link_to 'Edit', edit_tolva_path(tolva) %></td>
    <td><%= link_to 'Destroy', tolva, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

